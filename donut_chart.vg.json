{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Total Death Percentage In Each Continent",
  "data": {
    "url": "https://raw.githubusercontent.com/Jisnu-Palanisamy/FIT3179/main/COVID-19%20Coronavirus.csv"
  },
  "transform": [
    {
      "window": [{"op": "sum", "field": "TotalDeaths", "as": "Total_Deaths"}],
      "frame": [null, null]
    },
    {
      "calculate": "datum.TotalDeaths/datum.Total_Deaths * 100",
      "as": "PercentOfTotal"
    }
  ],
  "layer": [
    {"mark": {"type": "arc", "innerRadius": 120, "tooltip": true}},
    {
      "mark": {"type": "text", "radius": 300},
      "encoding": {"text": {"field": "Continent", "type": "nominal"}}
    }
  ],
  "encoding": {
    "theta": {
      "field": "PercentOfTotal",
      "type": "quantitative",
      "aggregate": "sum",
      "stack": "normalize",
      "title": "Death Percentage"
    },
    "color": {"field": "Continent", "type": "nominal", "legend": null}
  },
  "config": {}
}